# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smart_home
DB_USER=postgres
DB_PASSWORD=your_password_here

# Transport Configuration
# Options: serial, http
TRANSPORT_TYPE=serial

# Serial Port Configuration (for TRANSPORT_TYPE=serial)
# Find your port using: node -e "const {SerialPort} = require('serialport'); SerialPort.list().then(ports => console.log(ports));"
SERIAL_PORT=COM3
SERIAL_BAUD_RATE=9600

# HTTP Configuration (for TRANSPORT_TYPE=http)
ARDUINO_HTTP_URL=http://192.168.1.150
HTTP_POLL_INTERVAL=2000

# Server Configuration
HTTP_PORT=3000
WS_PORT=8080

# Environment
NODE_ENV=development
